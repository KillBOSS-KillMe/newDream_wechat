<template>
  <view>
    <view class="typeList">
      <repeat for="{{list}}" item="item">
        <image @tap="goType" data-index="{{index}}" src="../image/{{item}}" />
      </repeat>
    </view>
    <nav @childFn.user="goPage" @childFnOrReturn.user="goModifyUserInfo" />
  </view>
</template>

<script>
  import wepy from 'wepy'
  import nav from '../components/nav' // 底部导航
  export default class IKnow extends wepy.page {
     config = {
      navigationBarTitleText: '我知道'
    }
    components = {
      nav: nav
    }
    mixins = []

    data = {
      list: [
        'IKnow1.png',
        'IKnow2.png',
        'IKnow3.png',
        'IKnow4.png'
      ]
    }

    computed = {

    }

    methods = {
      // 底部导航跳转
      goPage (url, evt) {
        // if (this.verificationUserInfo()) {
        //   return 
        // }
        // 销毁当前页{跳转}
        this.$redirect(url)
      },
      // 选择进入页
      goType(e) {
        let index = e.currentTarget.dataset.index
        let url = ''
        switch(index) {
          case 0: 
            url = '/pages/IKnowSignUp'
            break;
          case 1: 
            url = '/pages/IKnowType?type=0'
            break;
          case 2: 
            url = '/pages/IKnowType?type=1'
            break;
          case 3: 
            url = '/pages/IKnowType?type=2'
            break;
          default:
            break;
        }
        this.$navigate(url)
      }
    }

    events = {

    }

    onLoad(options) {
    }
  }
</script>
