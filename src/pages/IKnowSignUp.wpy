<template>
  <view>
    <view class="list">
      <view class="item">
        <label>姓名</label>
        <input data-name="register_name" @input="getSetData" type="text" placeholder="请输入您的姓名" >
      </view>
      <view class="item">
        <label>性别</label>
        <checkbox-group class="sel" bindchange="selGender" data-index="{{index}}" data-checks="{{item.checks}}">
          <repeat for="{{genderList}}" item="item">
            <view class="itemGender">
              <checkbox data-index="{{index}}" id="{{item.id}}" value="{{index}}" checked="{{item.checks}}"/>
              <text>{{item.name}}</text>
            </view>
          </repeat>
        </checkbox-group>
      </view>
      <view class="item">
        <label>身份证号</label>
        <input data-name="id_card" @input="getSetData" type="text" placeholder="请输入您的身份证号码" >
      </view>
      <view class="item">
        <label>联系方式</label>
        <input data-name="contact" @input="getSetData" type="text" placeholder="请输入您的联系方式" >
      </view>
      <view class="item">
        <label>所属区县</label>
        <input data-name="address" @input="getSetData" type="text" placeholder="请输入所属区县" >
      </view>
      <view class="item">
        <label>学校</label>
        <input data-name="school" @input="getSetData" type="text" placeholder="请输入学校名称" >
      </view>
      <view class="item">
        <label>指导老师</label>
        <input data-name="teacher" @input="getSetData" type="text" placeholder="请输入您的指导老师" >
      </view>
      <view class="item">
        <label>指导老师联系方式</label>
        <input data-name="teacher_contact" @input="getSetData" type="text" placeholder="请输入您的指导老师联系方式" >
      </view>
      <view class="item">
        <label>自我介绍</label>
        <textarea data-name="declaration" @input="getSetData" placeholder="请输入..."></textarea>
      </view>
      <view class="item">
        <label>参赛宣言</label>
        <textarea data-name="introduction" @input="getSetData" placeholder="请输入..."></textarea>
      </view>
    </view>
    <view class="notice">
      <text>参赛须知</text>
      <repeat for="{{notice}}" item="item">
        <text>{{index + 1}}.{{item}}</text>
      </repeat>
    </view>
    <view class="sub">
      <view @tap="submit">提交</view>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  export default class NewImage extends wepy.page {
     config = {
      navigationBarTitleText: '报名通道'
    }
    components = {
    }
    mixins = []

    data = {
      notice: [
        '提交报名表即为报名成功，出特殊情况外，不得随意退赛。',
        '比赛过程中不能随意更换队员。',
        '请所有参赛人员听从组织方指挥和安排，以免引起不必要的冲突。如有不听劝阻导致影响比赛者，工作人员有权取消其比赛资格。',
        '参赛过程中请注意保障个人安全。'
      ],
      genderList: [
        {name: '男', id: '1', checks: false},
        {name: '女', id: '2', checks: false}
      ],
      formNode: {
        register_name: '',         // 姓名
        id_card: '',               // 身份证号
        contact: '',               // 联系方式
        address: '',               // 地址
        sex: '',                   // 性别
        school: '',                // 学校
        teacher: '',               // 指导老师
        teacher_contact: '',       // 指导老师联系方式
        introduction: '',          // 参赛宣言
        declaration: ''            // 自我介绍
      },
      
    }

    computed = {

    }

    methods = {
      // 性别选择
      selGender(e) {
        let selected = e.detail.value;
        let genderList = this.genderList;
        for (let i = 0; i < genderList.length; ++i) {
          let checks = 'genderList[' + i + '].checks'
          if (i == selected[selected.length - 1]) {
            this.setData({
              [checks]: true
            })
          } else {
            this.setData({
              [checks]: false
            })
          }
          if (genderList[i].checks) {
            this.formNode['sex'] = genderList[i].id
          }
        }
        this.$apply()
      },
      // 表单数据获取
      getSetData(e) {
        let formNode = this.formNode
        let name = e.currentTarget.dataset.name
        let value = e.detail.value
        formNode[name] = value
        this.formNode = formNode
        this.$apply()
      },
    }

    events = {

    }

    onLoad(options) {
    }
    submit() {
      let formNode = this.formNode
      for( let key in formNode ) {
        if (formNode[key] == '') {
          wx.showToast({
            title: "请完善信息",
            icon: 'none',
            duration: 2000
          });
          return false
        }
      }
      wx.showToast({
        title: "数据提交中...",
        icon: 'loading',
        duration: 1000000
      });
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/weapp/knowledge/sign_up`,
        method: 'POST',
        header: {
          'content-type':'application/json',
          Authorization: this.$parent.globalData.token
        },
        data: formNode,
        success: data => {
          data = this.$parent.null2str(data)
          wx.hideToast()
          console.log(data)
          // if (data.statusCode === 422) {
          //   wx.showToast({
          //     title: '提交失败',
          //     icon: 'none',
          //     duration: 2000
          //   });
          //   return false
          // }
          if (data.data.status_code === 201) {
            wx.showToast({
              title: data.data.message,
              icon: 'success',
              duration: 2000
            });
            setTimeout(() => {
              wx.navigateBack({
                delta: -1
              })
            }, 2000)
          } else {
            wx.showToast({
              title: '提交失败',
              icon: 'none',
              duration: 2000
            });
          }
        }
      })
    }
  }
</script>
