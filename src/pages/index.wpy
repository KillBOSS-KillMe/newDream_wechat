    methods = {
      // 底部导航跳转
      // 底部导航跳转
      goPage (url, evt) {
        // if (this.verificationUserInfo()) {
        //   return 
        // }
        // 销毁当前页{跳转}
        this.$redirect(url)
      },
    }

    events = {

    }

    onLoad(options) {
      // 分享信息获取
      if (options.hasOwnProperty("scene")) {
        let data = options.scene.split('%3D')
        if (data[0] == 'pid') {
          this.$parent.globalData.pid = data[1]
        } else {
          this.$parent.globalData.admin_id = data[1]
        }
      }
      this.mapKey = this.$parent.globalData.mapKey
      // wx.showToast({
      //   title: "拼命加载中...",
      //   icon: 'loading',
      //   duration: 1000000
      // });
      
      // 获取用户信息
      this.onGetUserInfo()
      // let token = this.$parent.globalData.token
      // if (token != '') {
      //   // 轮播图加载·
      //   this.getSwiperList()
      //   // 获取定位及地址
      //   this.getLocation()
      //   // 用户信息获取
      //   this.setUserInfo()
      //   // 服务推荐
      //   this.getServiceList()
      //   // 人气推荐
      //   this.getPopularityList()
      // } else {
      //   // 获取Token
      //   this.getToken()
      // }
      
      
    }
    // 服务推荐
    getServiceList() {
      wx.showToast({
        title: "加载中...",
        icon: 'none',
        duration: 100
      });
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/index/get_order_recommend_list`,
        method: 'GET',
        header: {
          authorization: this.$parent.globalData.token,
          apikey: this.$parent.globalData.apikey
        },
        data: {
          
        },
        success: data => {
          wx.hideToast()
          data = this.$parent.null2str(data)

          if (data.data.code == '8888') {
            this.serviceList = data.data.data
            this.$apply()
          }
          
        }
      })
    }
    // 人气推荐
    getPopularityList() {
      wx.showToast({
        title: "加载中...",
        icon: 'none',
        duration: 100
      });
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/index/get_order_sentiment_list`,
        method: 'GET',
        header: {
          authorization: this.$parent.globalData.token,
          apikey: this.$parent.globalData.apikey
        },
        data: {
          
        },
        success: data => {
          wx.hideToast()
          data = this.$parent.null2str(data)
          if (data.data.code == '8888') {
            this.peopleList = data.data.data
            this.$apply()
          }
          
        }
      })
    }
    // 下拉刷新
    onPullDownRefresh() {
      wx.showToast({
        title: "拼命加载中...",
        icon: 'loading',
        duration: 1000000
      });
      // 提交用户信息
      this.getToken()
      // 获取用户信息
      this.onGetUserInfo()
    }
    

    // 用户信息校验
    verificationUserInfo() {
      if (!this.userInfo.hasOwnProperty('id')) {
        wx.showToast({
          title: "用户信息加载中...",
          icon: 'none',
        });
        return true
      }
    }
    
    addCollectionShow() {
      wx.getStorage({
        key: 'addCollection',
        success: res => {
          console.log(res.data)
          this.collectionStr = res.data
          this.$apply()
        } 
      })
    }

    // 用户信息获取
    onGetUserInfo() {
      // 查看是否授权
      wx.getSetting({
        success: res => {
          if (res.authSetting['scope.userInfo']) {
            this.userInfoButtonShow = false
            this.$apply()
            // 已经授权，可以直接调用 getUserInfo 获取头像昵称
            wx.getUserInfo({
              success: res => {
                this.userInfo = Object.assign(this.userInfo, res.userInfo)
                this.$parent.globalData.userInfo = this.userInfo
                this.$apply()
              }
            })
          }
        }
      })
    }
    // 提交用户信息
    setUserInfo() {
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/auth/my`,
        method: 'GET',
        header: {
          'content-type':'application/json',
          authorization: this.$parent.globalData.token,
          apikey: this.$parent.globalData.apikey
        },
        success: data => {
          data = this.$parent.null2str(data)
          if (data.data.code === 8888) {
            console.log(data)
            this.userInfo = Object.assign(this.userInfo, data.data.data);
            this.$parent.globalData.userInfo = this.userInfo
            this.$apply()
            // 判断是否进入注册页
            // isTourist判断是否为游客
            let isTourist = this.$parent.globalData.isTourist
            if (this.userInfo.phone == '' && !isTourist) {
              // 提示注册
              this.goRegistered()
            }
          } else {
            wx.showModal({
              title: '',
              content: data.data.errmsg
            })
          }
        }
      })
    }

    // 获取轮播图
    getSwiperList() {
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/index/get_baner_list`,
        header: {
          authorization: this.$parent.globalData.token,
          apikey: this.$parent.globalData.apikey
        },
        method: 'GET',
        success: data => {
          data = this.$parent.null2str(data)
          if (data.data.code === 8888) {
            this.swiperList = data.data.data
            this.$parent.globalData.swiperList = this.swiperList
            console.log(this.swiperList)
            this.$apply()
          } else if (data.data.code === 1001) {
            // 获取Token
            this.$parent.getToken(this.onLoad())
          }
        }
      })
    }

    // 定位
    getLocation() {
      console.log('-------------------------------------')
      wx.getLocation({
        type: 'wgs84',   //默认为 wgs84 返回 gps 坐标，gcj02 返回可用于 wx.openLocation 的坐标 
        desc: '你的位置信息将用于小程序位置接口的效果展示',
        success: res => { 
          this.longitude = res.longitude
          this.latitude = res.latitude
          this.$apply()
          console.log(this.longitude, this.latitude)
          this.loadCity(this.longitude, this.latitude)
        },
        fail: res => {
          console.log(res)
          this.longitude = ''
          this.latitude = ''
          this.$apply()
        }
      })
    }
    loadCity(longitude, latitude) {
      console.log('-------------------------------------')
      wx.request({
        url: `https://apis.map.qq.com/ws/geocoder/v1/?location=${latitude},${longitude}&key=${this.$parent.globalData.mapKey}`,
        data: {},
        success: (res) => {
          this.address = res.data.result.address
          console.log(this.address)
        }
      })
    }
  }
