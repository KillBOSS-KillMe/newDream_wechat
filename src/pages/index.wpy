<script>
  import wepy from 'wepy'
  import nav from '../components/nav' // 底部导航
  export default class Index extends wepy.page {
    config = {
      navigationBarTitleText: '丝路首页'
    }
    components = {
      nav: nav
    }

    mixins = []

    data = {
      userInfo: {},
      userInfoButtonShow: true,
      swiperList: [
        {id: '1' ,image_url: '../image/daw.jpg'},
        {id: '1' ,image_url: '../image/daw.jpg'},
        {id: '1' ,image_url: '../image/daw.jpg'},
