.pageNav{
  width: 690rpx;
  height: auto;
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: solid #F0F2F3;
  border-width: 10rpx 0 10rpx 0;
  .item{
    width: 330rpx;
    height: 170rpx;
    border-radius: 10rpx;
    background-color: #000;
  }
}
</style>