<script>
  import wepy from 'wepy'
  import nav from '../components/nav' // 底部导航
import configStore from '../store';
  export default class Index extends wepy.page {
    config = {
      navigationBarTitleText: '丝路首页'
    }
    components = {
      nav: nav
    }

    mixins = []

    data = {
      pageDataNode: null,
      requestImgUrl: '',
      userInfo: {},
      userInfoButtonShow: true,
      swiperList: [
        {id: '1' ,image_url: '../image/daw.jpg'},
        {id: '1' ,image_url: '../image/daw.jpg'},
        {id: '1' ,image_url: '../image/daw.jpg'},
        {id: '1' ,image_url: '../image/daw.jpg'}
      ],
      latitude: 0
    }

    computed = {

    }

    methods = {
      // 底部导航跳转
      // 底部导航跳转
      goPage (url, evt) {
        // if (this.verificationUserInfo()) {
        //   return 
        // }
        // 销毁当前页{跳转}
        this.$redirect(url)
      },
      // 进入我知道
      goIKnow() {
        this.$parent.globalData.navAction = ['noAction', 'action', 'noAction', 'noAction']
        let url = "/pages/IKnow"
        this.$redirect(url)
      },
      // 进入新影像
      goNewImage() {
        this.$parent.globalData.navAction = ['noAction','noAction', 'action', 'noAction']
        let url = "/pages/newImage"
        this.$redirect(url)
      },
      goDetails(e) {
        let index = e.currentTarget.dataset.index
        let type = this.pageDataNode.artile_data.data[index].artile_type
        let id = e.currentTarget.dataset.id
        let url = ''
        switch(type) {
          case 0: 
            url = '/pages/IKnowSignUp'
            break;
          case 1: 
            url = '/pages/IKnowType?type=1'
            break;
          case 2: 
            url = '/pages/IKnowType?type=2'
            break;
          case 3: 
            url = '/pages/IKnowType?type=3'
            break;
          default:
            break;
        }
        this.$redirect(url)
      }
    }

    events = {

    }

    onLoad(options) {
      this.userInfo = this.$parent.globalData.userInfo
      this.requestImgUrl = this.$parent.globalData.requestImgUrl
      wx.showToast({
        title: "拼命加载中...",
        icon: 'loading',
        duration: 1000000
      });
      let token = this.$parent.globalData.token
      if (token != '') {
        // 获取首页数据
        this.getIndexInfo()
      } else {
        // 获取用户信息--获取Token
        this.onGetUserInfo()
      }
    }
    // 下拉刷新
    onPullDownRefresh() {
      wx.showToast({
        title: "拼命加载中...",
        icon: 'loading',
        duration: 1000000
      });
      // 获取用户信息
      this.onGetUserInfo()
    }
    

    // 用户信息校验
    verificationUserInfo() {
      if (!this.userInfo.hasOwnProperty('id')) {
        wx.showToast({
          title: "用户信息加载中...",
          icon: 'none',
        });
        return true
      }
    }
    // 用户信息获取
    onGetUserInfo() {
      // 查看是否授权
      wx.getSetting({
        success: res => {
          if (res.authSetting['scope.userInfo']) {
            this.userInfoButtonShow = false
            this.$apply()
            // 已经授权，可以直接调用 getUserInfo 获取头像昵称
            wx.getUserInfo({
              success: res => {
                this.userInfo = Object.assign(this.userInfo, res.userInfo)
                this.$parent.globalData.userInfo = this.userInfo
                console.log('----------')
                this.$apply()
                // 登录
                this.setUserInfo()
              }
            })
          }
        }
      })
    }
    // 提交用户信息
    setUserInfo() {
      wx.login({
        success: res => {
          wx.request({
            url: `${this.$parent.globalData.requestUrl}/weapp/authorizations`,
            method: 'POST',
            header: {
              // 'content-type':'application/json',
            },
            data: {
              code: res.code,
              nickName: this.userInfo.nickName,
              gender: this.userInfo.gender,
              avatar: this.userInfo.avatarUrl
            },
            success: data => {
              data = this.$parent.null2str(data)
              wx.hideToast()
              if (data.statusCode === 201) {
                let token = data.data.token_type + data.data.access_token
                this.$parent.globalData.token = token
                console.log(token)
                this.getIndexInfo()
              } else {
                wx.showModal({
                  title: '',
                  content: data.data.errmsg
                })
              }
            }
          })
        }
      })
    }
    getIndexInfo() {
      wx.showToast({
        title: "拼命加载中...",
        icon: 'loading',
        duration: 1000000
      });
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/index`,
        method: 'GET',
        header: {
          // 'content-type':'application/json',
        },
        data: {},
        success: data => {
          data = this.$parent.null2str(data)
          console.log(data)
          wx.hideToast()
          if (data.statusCode === 200) {
            this.pageDataNode = data.data
            this.$apply()
          } else {
            wx.showModal({
              title: '',
              content: data.data.errmsg
            })
          }
        }
      })
    }
  }
</script>
