<template>
  <view>
    <view class="list">
      <view class="item">
        <label>创作时间</label>
        <input data-name="creation_time" @input="getSetData" type="text" placeholder="请输入创作时间" >
      </view>
      <view class="item">
        <label>作者姓名</label>
        <input data-name="author" @input="getSetData" type="text" placeholder="请输入作者姓名" >
      </view>
      <view class="item">
        <label>身份证号</label>
        <input data-name="id_card" @input="getSetData" type="text" placeholder="请输入身份证号" >
      </view>
      <view class="item">
        <label>所在区县及学校名称</label>
        <input data-name="address" @input="getSetData" type="text" placeholder="请输入所在区县及学校名称" >
      </view>
      <view class="item">
        <label>性别</label>
        <checkbox-group class="sel" bindchange="selGender" data-index="{{index}}" data-checks="{{item.checks}}">
          <repeat for="{{genderList}}" item="item">
            <view class="itemGender">
              <checkbox data-index="{{index}}" id="{{item.id}}" value="{{index}}" checked="{{item.checks}}"/>
              <text>{{item.name}}</text>
            </view>
          </repeat>
        </checkbox-group>
      </view>
      <view class="item">
        <label>手机</label>
        <input data-name="phone" @input="getSetData" type="text" placeholder="请输入手机号码" >
      </view>
      <view class="item">
        <label>E-mail</label>
        <input data-name="email" @input="getSetData" type="text" placeholder="请输入您的邮箱" >
      </view>
      <view class="item">
        <label>作品是否参与过其他评选</label>
        <checkbox-group class="sel" bindchange="selSelection" data-index="{{index}}" data-checks="{{item.checks}}">
          <repeat for="{{selection}}" item="item">
            <view class="itemGender">
              <checkbox data-index="{{index}}" id="{{item.id}}" value="{{index}}" checked="{{item.checks}}"/>
              <text>{{item.name}}</text>
            </view>
          </repeat>
        </checkbox-group>
      </view>
      <view class="item">
        <label>是否播出/刊载/获奖情况</label>
        <textarea data-name="introduction" @input="getSetData" placeholder="请输入..."></textarea>
      </view>
    </view>
    <view class="notice">
      <text>参赛做作品要求</text>
      <repeat for="{{notice}}" item="item">
        <text>{{index + 1}}.{{item}}</text>
      </repeat>
    </view>
    <view class="list">
      <view class="item">
        <checkbox-group class="sel" bindchange="isAgree" data-checks="false">
          <repeat for="{{isAgree}}" item="item">
            <view class="itemGender">
              <checkbox data-index="{{index}}" id="{{item.id}}" value="{{index}}" checked="{{item.checks}}"/>
              <text>{{item.name}}</text>
            </view>
          </repeat>
        </checkbox-group>
      </view>
      <view class="item">
        <label>请选择上传作品类型</label>
        <checkbox-group class="sel" bindchange="selWorksType" data-index="{{index}}" data-checks="{{item.checks}}">
          <repeat for="{{worksType}}" item="item">
            <view class="itemGender">
              <checkbox data-index="{{index}}" id="{{item.id}}" value="{{index}}" checked="{{item.checks}}"/>
              <text>{{item.name}}</text>
            </view>
          </repeat>
        </checkbox-group>
      </view>
      <view class="item">
        <label>作品名称</label>
        <input data-name="work_name" @input="getSetData" type="text" placeholder="请输入作品名称" >
      </view>
      <view class="item">
        <label>创作概况及主体阐述</label>
        <textarea data-name="work_introduction" @input="getSetData" placeholder="请输入..."></textarea>
      </view>
    </view>
    <view class="upImg" wx:if="{{formNode.work_type == '3'}}">
      <view class="title">上传作品图片</view>
      <view class="description">支持jpg,gif,bmp,psd,tiff等图片格式,组照最多可上传8张</view>
      <view class="imgList">
        <repeat for="{{formNode.images}}" item="item">
          <image src="{{requestImgUrl + item}}" />
        </repeat>
        <image class="up" @tap="upImgList" src="../image/upImg.png" />
      </view>
    </view>
    <view class="upVideo" wx:if="{{formNode.work_type != '3'}}">
      <view class="title">上传作品视频</view>
      <!-- <view class="description">支持jpg,gif,bmp,psd,tiff等图片格式,组照最多可上传8张</view> -->
      <view class="imgList">
        <video id="myVideo" wx:if="{{formNode.video_path != ''}}" src="{{requestImgUrl + formNode.video_path}}" enable-danmu danmu-btn controls></video>
        <image class="up" @tap="upVideo" src="../image/upImg.png" />
      </view>
    </view>
    <view class="sub">
      <view @tap="submit">提交</view>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  export default class NewImageSignUp extends wepy.page {
     config = {
      navigationBarTitleText: '报名通道'
    }
    components = {
    }
    mixins = []

    data = {
      requestImgUrl: '',
      notice: [
        '作品必须为创作者原创，一旦发现为抄袭，取消参赛资格。',
        '参赛作品黑白、彩色均可，单幅、组照不限，标题自拟。',
        '作品格式为JEPG文件，长边不小于800像素。',
        '组照提交数量最多不超过8张。',
        '作品一律不得加入边框、水印、签名等修饰。',
        '没人上报参赛作品不得超过三件（组照算一件）。'
      ],
      genderList: [
        {name: '男', id: '1', checks: false},
        {name: '女', id: '2', checks: false}
      ],
      isAgree: [
        {name: '我已阅读并同意以上《参赛须知》文字', id: '1', checks: false}
      ],
      selection: [
        {name: '是', id: '1', checks: false},
        {name: '否', id: '2', checks: false}
      ],
      worksType:[
        {name: '视频', id: '1', checks: true},
        {name: '动画', id: '2', checks: false},
        {name: '图片', id: '3', checks: false}
      ],
      formNode: {
        creation_time: '',         // 创作时间
        author: '',               // 作者
        id_card: '',               // 身份证号
        address: '',               // 地址
        sex: '',                   // 性别
        phone: '',                // 联系方式
        email: '',               // 邮箱
        is_join_other: '',       // 作品是否参与过其他评选
        is_agree: '',          // 同意
        introduction: '',            // 主体阐述
        work_type: '1',            // 作品类型
        work_name: '',            // 作品名称
        work_introduction: '',            // 作品描述
        video_path: '',            // 视频地址
        images: []            // 图片列表
      },
    }

    computed = {

    }

    methods = {
      // 表单数据获取
      getSetData(e) {
        let formNode = this.formNode
        let name = e.currentTarget.dataset.name
        let value = e.detail.value
        formNode[name] = value
        this.formNode = formNode
        this.$apply()
      },
      // 性别选择
      selGender(e) {
        let selected = e.detail.value;
        let genderList = this.genderList;
        for (let i = 0; i < genderList.length; ++i) {
          let checks = 'genderList[' + i + '].checks'
          if (i == selected[selected.length - 1]) {
            this.setData({
              [checks]: true
            })
          } else {
            this.setData({
              [checks]: false
            })
          }
          if (genderList[i].checks) {
            this.formNode['sex'] = genderList[i].id
          }
        }
        this.$apply()
      },
      // 同意参赛须知
      isAgree(e) {
        if (e.detail.value.length > 0) {
          // 选中
          this.formNode['is_agree'] = 1
        } else {
          // 不选中
          this.formNode['is_agree'] = 0
        }
      },
      // 是否参与过其他评选
      selSelection(e) {
        let selected = e.detail.value;
        let selection = this.selection;
        for (let i = 0; i < selection.length; ++i) {
          let checks = 'selection[' + i + '].checks'
          if (i == selected[selected.length - 1]) {
            this.setData({
              [checks]: true
            })
          } else {
            this.setData({
              [checks]: false
            })
          }
          if (selection[i].checks) {
            this.formNode['is_join_other'] = selection[i].id
          }
        }
        this.$apply()
      },
      // 选择作品类型
      selWorksType(e) {
        let selected = e.detail.value;
        let worksType = this.worksType;
        for (let i = 0; i < worksType.length; ++i) {
          let checks = 'worksType[' + i + '].checks'
          if (i == selected[selected.length - 1]) {
            this.setData({
              [checks]: true
            })
          } else {
            this.setData({
              [checks]: false
            })
          }
          if (worksType[i].checks) {
            this.formNode['work_type'] = worksType[i].id
          }
        }
        // {name: '视频', id: '1', checks: false},
        // {name: '动画', id: '2', checks: false},
        // {name: '图片', id: '3', checks: false}
        this.$apply()
      },
      // 图片上传
      upImgList() {
        this.runUpImgList()
      },
      // 视频上传
      upVideo() {
        this.runUpVideo()
      }
    }

    events = {

    }

    onLoad(options) {
      this.requestImgUrl = this.$parent.globalData.requestImgUrl
    }
    submit() {
      let formNode = this.formNode
      console.log(formNode)
      // for( let key in formNode ) {
      //   if (formNode[key] == '') {
      //     wx.showToast({
      //       title: "请完善信息",
      //       icon: 'none',
      //       duration: 2000
      //     });
      //     return false
      //   }
      // }
      if (formNode.creation_time == '') {
        wx.showToast({
          title: "请完善创作时间",
          icon: 'none',
          duration: 2000
        });
        return false
      }
      if (formNode.author == '') {
        wx.showToast({
          title: "请完善作者",
          icon: 'none',
          duration: 2000
        });
        return false
      }
      if (formNode.id_card == '') {
        wx.showToast({
          title: "请完善身份证号",
          icon: 'none',
          duration: 2000
        });
        return false
      }
      if (formNode.address == '') {
        wx.showToast({
          title: "请完善所在区县及学校名称",
          icon: 'none',
          duration: 2000
        });
        return false
      }
      if (formNode.sex == '') {
        wx.showToast({
          title: "请完善性别",
          icon: 'none',
          duration: 2000
        });
        return false
      }
      if (formNode.phone == '') {
        wx.showToast({
          title: "请完善联系方式",
          icon: 'none',
          duration: 2000
        });
        return false
      }
      if (formNode.email == '') {
        wx.showToast({
          title: "请完善邮箱",
          icon: 'none',
          duration: 2000
        });
        return false
      }
      if (formNode.is_join_other == '') {
        wx.showToast({
          title: "请完善作品是否参与过其他评选信息",
          icon: 'none',
          duration: 2000
        });
        return false
      }
      if (formNode.is_agree == '') {
        wx.showToast({
          title: "请同意参赛须知",
          icon: 'none',
          duration: 2000
        });
        return false
      }
      if (formNode.work_type == '') {
        wx.showToast({
          title: "请完善作品类型",
          icon: 'none',
          duration: 2000
        });
        return false
      }
      if (formNode.work_name == '') {
        wx.showToast({
          title: "请完善作品名称",
          icon: 'none',
          duration: 2000
        });
        return false
      }
      if (formNode.introduction == '') {
        wx.showToast({
          title: "请完善是否播出/刊载/获奖情况",
          icon: 'none',
          duration: 2000
        });
        return false
      }
      if (formNode.work_introduction == '') {
        wx.showToast({
          title: "请完善创作概况及主体阐述",
          icon: 'none',
          duration: 2000
        });
        return false
      }
      if (formNode.work_type == '3') {
        // 图片
        if (formNode.images.length == 0) {
          wx.showToast({
            title: "请上传图片",
            icon: 'none',
            duration: 2000
          });
          return false
        }
      } else {
        // 视频
        if (formNode.video_path == '') {
          wx.showToast({
            title: "请上传视频",
            icon: 'none',
            duration: 2000
          });
          return false
        }
      }
      wx.showToast({
        title: "数据提交中...",
        icon: 'loading',
        duration: 1000000
      });
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/weapp/new_image/sign_up`,
        method: 'POST',
        header: {
          'content-type':'application/json',
          Authorization: this.$parent.globalData.token
        },
        data: formNode,
        success: data => {
          data = this.$parent.null2str(data)
          wx.hideToast()
          console.log(data)
          if (data.statusCode === 422) {
            wx.showToast({
              title: '提交失败',
              icon: 'none',
              duration: 2000
            });
            return false
          }
          if (data.data.status_code === 201) {
            wx.showToast({
              title: data.data.message,
              icon: 'success',
              duration: 2000
            });
            setTimeout(() => {
              wx.navigateBack({
                delta: -1
              })
            }, 2000)
          }
        }
      })
    }
    // 上传视频
    runUpVideo() {
      wx.chooseVideo({
        sourceType: ['album','camera'],
        maxDuration: 60,
        camera: 'back',
        success: res => {
          console.log(res)
          wx.showToast({
            title: '视频上传中',
            icon: 'loading',
            duration: 1000000
          });
          wx.uploadFile({
            url: `${this.$parent.globalData.requestUrl}/weapp/video`,
            filePath: res.tempFilePath,
            name: 'video',
            header: {
              Authorization: this.$parent.globalData.token
            },
            success: res => {
              // console.log(res)
              wx.hideToast()
              if (res.statusCode == 201) {
                this.formNode.video_path = JSON.parse(res.data).path
                this.$apply()
              } else {
                wx.showToast({
                  title: '上传失败',
                  icon: 'none',
                  duration: 2000
                });
              }
            }
          })
        }
      })
    }
    // 上传图片
    runUpImgList() {
      let count = 9 - this.formNode.images.length
      wx.chooseImage({
        count: count,
        sizeType: ['original', 'compressed'],
        sourceType: ['album', 'camera'],
        success: res => {
          wx.showToast({
            title: '图片上传中',
            icon: 'loading'
          });
          Promise.all(res.tempFiles.map(item => {
            return new Promise((resolve, reject) => {
              wx.uploadFile({
                url: `${this.$parent.globalData.requestUrl}/weapp/images`,
                filePath: item.path,
                name: 'image',
                header: {
                  Authorization: this.$parent.globalData.token
                },
                success: res => {
                  resolve({
                    path: JSON.parse(res.data).path
                  })
                }
              })
            })
          })).then(e => {
            wx.hideToast()
            let image = this.formNode.images
            for (let i = 0; i < e.length; i++) {
              image.push(e[i].path)
            }
            this.formNode.images = image
            this.$apply()
          }).catch(err => console.log(err))
        }
      })
    }
  }
</script>
