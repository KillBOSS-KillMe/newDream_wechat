<script>
  import wepy from 'wepy'
  export default class NewImageType extends wepy.page {
     config = {
      navigationBarTitleText: '新影像'
    }
    components = {
    }
    mixins = []

    data = {
      videoShowList: [],
      userInfo: {},
      requestImgUrl: '',
      pageData: [null, null, null],
      searchData: [null, null, null],
      searchKey: '',
      type: 0
    }

    computed = {

    }

    methods = {
      selType(e) {
        this.type = e.currentTarget.dataset.type
        this.searchKey = ''
        this.$apply()
        this.getData()
      },
      // 进入图片详情
      goImage(e) {
        let id = e.currentTarget.dataset.id
        let url = `/pages/detailPhoto?id=${id}&type=new_image`
        this.$navigate(url)
      },
      // 进入视频详情
      goVideo(e) {
        let id = e.currentTarget.dataset.id
        let url = `/pages/detailsVideo?id=${id}&type=new_image`
        this.$navigate(url)
      }
    }

    events = {

    }

    onLoad(options) {
      this.userInfo = this.$parent.globalData.userInfo
      this.requestImgUrl = this.$parent.globalData.requestImgUrl
      this.getData()
    }
    // 分享页面
    onShareAppMessage(e) {
      let id = e.currentTarget.dataset.id
      let title = e.currentTarget.dataset.title
      let type = this.type
      let url = ''
      if (type == 0 || type == 1) {
        url = `pages/detailsVideo?id=${id}&type=new_image`
      } else if (type == 2) {
        url = `pages/detailPhoto?id=${id}&type=new_image`
      }
      console.log(url)
      return {
        title: title,
        desc: '',
        // imageUrl: this.image,
        path: url
      }
    }
    /**
     * 页面上拉触底事件的处理函数
     */
    onReachBottom() {
      // 翻页加载
      if (this.searchKey != '') {
        return false
      }
      console.log(this.pageData[this.type])
      if (this.pageData[this.type].next_page_url != '') {
        this.getDataNextPage()
      } else {
        wx.showToast({
          title: "没有更多了",
          icon: 'none',
          duration: 2000
        });
      }
    }
    // 加载下一页数据
    getDataNextPage() {
      wx.showToast({
        title: "拼命加载中...",
        icon: 'loading',
        duration: 1000000
      });
      let type = this.type
      let nextPageUrl = this.pageData[type].next_page_url
      wx.request({
        url: nextPageUrl,
        method: 'GET',
        data: {
          type: type
        },
        success: data => {
          data = this.$parent.null2str(data)
          console.log(data)
          wx.hideToast()
          if (data.statusCode === 200) {
            let list = this.pageData[type].data
            let newList = data.data.data
            list = list.concat(newList)
            this.pageData[type].data = list
            console.log(this.pageData)
            this.$apply()
          } else {
            wx.showModal({
              title: '',
              content: data.data.errmsg
            })
          }
        }
      })
    }
    search(e) {
      this.searchKey = e.detail.value
      if (this.searchKey == '') {
        this.videoShowList = this.pageData[0].data
        return false
      }
      wx.showToast({
        title: "搜索中...",
        icon: 'loading',
        duration: 1000000
      });
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/weapp/new_image/search`,
        method: 'GET',
        data: {
          keywordes: this.searchKey,
          type: this.type,
          page: 1,
          page_size: 100000
        },
        success: data => {
          data = this.$parent.null2str(data)
          console.log(data)
          wx.hideToast()
          if (data.statusCode === 200) {
            this.searchData[this.type] = data.data.data
            this.$apply()
          } else {
            wx.showModal({
              title: '',
              content: data.data.errmsg
            })
          }
        }
      })
    }
    getData() {
      wx.showToast({
        title: "拼命加载中...",
        icon: 'loading',
        duration: 1000000
      });
      let type = this.type
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/weapp/new_image`,
        method: 'GET',
        header: {
          'content-type':'application/json',
          Authorization: this.$parent.globalData.token
        },
        data: {
          type: type
        },
        success: data => {
          data = this.$parent.null2str(data)
          console.log(data)
          wx.hideToast()
          if (data.statusCode === 200) {
            this.pageData[type] = data.data
            this.$apply()
          } else {
            wx.showModal({
              title: '',
              content: data.data.errmsg
            })
          }
        }
      })
    }
    // 下拉刷新
    onPullDownRefresh() {
      wx.showToast({
        title: "拼命加载中...",
        icon: 'loading',
        duration: 1000000
      });
    }
  }
</script>
