    computed = {

    }

    methods = {
      selType(e) {
        this.type = e.currentTarget.dataset.type
        this.$apply()
        this.getData()
      },
      // 进入图片详情
      goImage(e) {
        let id = e.currentTarget.dataset.id
        let url = `/pages/detailPhoto?id=${id}`
        this.$navigate(url)
      },
      // 进入视频详情
      goVideo(e) {
        let id = e.currentTarget.dataset.id
        let url = `/pages/detailsVideo?id=${id}`
        this.$navigate(url)
      }
    }

    events = {

    }

    onLoad(options) {
      this.getData()
    }
    getData() {
      wx.showToast({
        title: "拼命加载中...",
        icon: 'loading',
        duration: 1000000
      });
      let type = this.type
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/weapp/new_image`,
        method: 'GET',
        header: {
          'content-type':'application/json',
          Authorization: this.$parent.globalData.token
        },
        data: {
          type: 2
        },
        success: data => {
          data = this.$parent.null2str(data)
          console.log(data)
          wx.hideToast()
          if (data.statusCode === 200) {
            if (type == 1) {
              // 视频
              this.pageDatap[0] = data.data
            } else if (type == 2) {
              // 图文
              this.pageDatap[1] = data.data
            } else if (type == 3) {
              // 文字
              this.pageDatap[2] = data.data
            }
          } else {
            wx.showModal({
              title: '',
              content: data.data.errmsg
            })
          }
        }
      })
    }
    // 下拉刷新
    onPullDownRefresh() {
      wx.showToast({
        title: "拼命加载中...",
        icon: 'loading',
        duration: 1000000
      });
    }
  }
