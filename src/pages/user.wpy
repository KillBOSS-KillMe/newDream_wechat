<template>
  <view>
    <view class="userInfo">
      <image class="bg" src="../image/userBg.png" />
      <view class="con">
        <view class="name">
          <image src="{{userInfo.avatarUrl}}" />
          {{userInfo.nickName}}
        </view>
        <icon class="iconfont iconduihao"></icon>
      </view>
    </view>
    <view class="navList">
      <repeat for="{{navList}}" item="item">
        <view class="item {{item.type == '0'?'border':''}}" data-id="{{item.id}}" @tap="pageNav">
          <text>{{item.name}}</text>
          <icon class="iconfont iconduihao"></icon>
        </view>
      </repeat>
    </view>
    <nav @childFn.user="goPage" @childFnOrReturn.user="goModifyUserInfo" />
  </view>
</template>

<script>
  import wepy from 'wepy'
  import nav from '../components/nav' // 底部导航
  export default class User extends wepy.page {
    config = {
      navigationBarTitleText: '我的',
      navigationStyle: 'custom'
    }
    components = {
      nav: nav
    }

    mixins = []

    data = {
      userInfo: {},
      navList: [
        {id: '0', name: '已上传的作品', type: '0'},
        {id: '1', name: '报名情况', type: '1'},
        {id: '2', name: '我的点赞', type: '0'},
        {id: '3', name: '我的评论', type: '1'},
        {id: '4', name: '浏览记录', type: '0'},
        {id: '5', name: '清理缓存', type: '1'}
      ]
    }

    computed = {

    }

    methods = {
      // 底部导航跳转
      // 底部导航跳转
      goPage (url, evt) {
        // if (this.verificationUserInfo()) {
        //   return 
        // }
        // 销毁当前页{跳转}
        this.$redirect(url)
      },
      pageNav(e) {
        console.log(e)
        let type = e.currentTarget.dataset.id
        let url = ''
        switch(type) {
          case '0': 
            // 已上传的作品
            url = '/pages/userUpWorks'
            break;
          case '1': 
            // 报名情况
            url = '/pages/userSignUp'
            break;
          case '2': 
            // 我的点赞
            url = '/pages/userLikeList'
            break;
          case '3': 
             // 我的评论
            url = '/pages/userCommentList'
            break;
          case '4': 
             // 浏览记录
            url = '/pages/qqqqq'
            break;
          case '5': 
             // 系统设置
            // url = '/pages/qqqqq'
              wx.showModal({
                title: '提示',
                content: '确认清理缓存？',
                success: res => {
                  if (res.confirm) {
                    // console.log('用户点击确定')
                    wx.clearStorageSync();
                    wx.showToast({
                      title: '缓存清理中',
                      icon: 'loading',
                      duration: 5000
                    })
                    setTimeout(e => {
                      wx.showToast({
                        title: '清理成功',
                        icon: 'success',
                        duration: 1000
                      })
                      this.$parent.globalData.navAction = ['action', 'noAction', 'noAction', 'noAction']
                      let url = "/pages/index"
                      this.$redirect(url)
                    }, 5000 );
                  } else if (res.cancel) {
                    // console.log('用户点击取消')
                  }
                }
              })
            break;
          default:
            break;
        }
        this.$navigate(url)
      }
    }

    events = {

    }

    onLoad(options) {
      this.userInfo = this.$parent.globalData.userInfo
      console.log(this.userInfo)
    }
    // 下拉刷新
    onPullDownRefresh() {
      wx.showToast({
        title: "拼命加载中...",
        icon: 'loading',
        duration: 1000000
      });
      // 提交用户信息
      this.getToken()
      // 获取用户信息
      this.onGetUserInfo()
    }
    

    // 用户信息校验
    verificationUserInfo() {
      if (!this.userInfo.hasOwnProperty('id')) {
        wx.showToast({
          title: "用户信息加载中...",
          icon: 'none',
        });
        return true
      }
    }
    
  }
</script>
