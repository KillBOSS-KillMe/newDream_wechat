<template>
  <view class="infoList">
    <repeat for="{{pageDataNode.data}}" item="item">
      <view class="item" data-type="{{item.type}}" data-id="{{item.id}}">
        <view class="info">
          <text class="title">{{item.new_image.title}}</text>
          <text class="time">{{item.updated_at}}点赞</text>
        </view>
        <image src="{{requestImgUrl + item.new_image.images[0]}}" />
      </view>
    </repeat>
  </view>
</template>

<script>
  import wepy from 'wepy'
  export default class UserLikeList extends wepy.page {
     config = {
      navigationBarTitleText: '点赞列表'
    }
    components = {
    }
    mixins = []

    data = {
      requestImgUrl: '',
      pageDataNode:{},

    }

    computed = {

    }

    methods = {
    }

    events = {

    }

    onLoad(options) {
      this.requestImgUrl = this.$parent.globalData.requestImgUrl
      this.$apply()
      this.getData()
    }
    /**
     * 页面上拉触底事件的处理函数
     */
    onReachBottom() {
      // 翻页加载
      if (this.pageDataNode.data.length < this.pageDataNode.total) {
        this.getDataNextPage()
      } else {
        wx.showToast({
          title: "没有更多了",
          icon: 'none',
          duration: 2000
        });
      }
    }
    // 加载下一页数据
    getDataNextPage() {
      wx.showToast({
        title: "拼命加载中...",
        icon: 'loading',
        duration: 1000000
      });
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/weapp/users_like_list`,
        method: 'GET',
        data: {
          page: this.pageDataNode.page_tatal,
          page_size: this.pageDataNode.data.length
        },
        success: data => {
          data = this.$parent.null2str(data)
          wx.hideToast()
          if (data.statusCode === 200) {
            let list = this.pageDataNode.data
            let newList = data.data.data
            list = list.concat(newList)
            this.pageDataNode.data = list
            this.$apply()
          } else {
            wx.showModal({
              title: '',
              content: data.data.errmsg
            })
          }
        }
      })
    }
    getData() {
      wx.showToast({
        title: "拼命加载中...",
        icon: 'loading',
        duration: 1000000
      });
      let type = this.type
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/weapp/users_like_list`,
        method: 'GET',
        header: {
          'content-type':'application/json',
          Authorization: this.$parent.globalData.token
        },
        data: {
          page: 1,
          page_size: 20
        },
        success: data => {
          data = this.$parent.null2str(data)
          // console.log(data)
          wx.hideToast()
          if (data.statusCode === 200) {
            this.pageDataNode = data.data
            this.$apply()
          } else {
            wx.showModal({
              title: '',
              content: data.data.errmsg
            })
          }
        }
      })
    }

    // 下拉刷新
    onPullDownRefresh() {
      wx.showToast({
        title: "拼命加载中...",
        icon: 'loading',
        duration: 1000000
      });
    }
  }
</script>
