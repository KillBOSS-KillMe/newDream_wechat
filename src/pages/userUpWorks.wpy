<script>
  import wepy from 'wepy'
  export default class UserUpWorks extends wepy.page {
     config = {
      navigationBarTitleText: '已上传的商品'
    }
    components = {
    }
    mixins = []

    data = {
      userInfo: {},
      requestImgUrl: '',
      pageData: [null, null, null],
      type: 1,
      videoList: [
        {
          title: '标题标题标题标题标题标题标题',
          read: 100,
          comment: 1000,
          like: 100,
          share: 100,
          video: '../image/daw.jpg'
        },{
          title: '标题标题标题标题标题标题标题',
          read: 100,
          comment: 1000,
          like: 100,
          share: 100,
          video: '../image/daw.jpg'
        },{
          title: '标题标题标题标题标题标题标题',
          read: 100,
          comment: 1000,
          like: 100,
          share: 100,
          video: '../image/daw.jpg'
        },{
          title: '标题标题标题标题标题标题标题',
          read: 100,
          comment: 1000,
          like: 100,
          share: 100,
          video: '../image/daw.jpg'
        }
      ]
    }

    computed = {

    }

    methods = {
      selType(e) {
        this.type = e.currentTarget.dataset.type
        this.$apply()
        this.getData()
      },
      // 进入图片详情
      goImage(e) {
        let id = e.currentTarget.dataset.id
        let url = `/pages/detailPhoto?id=${id}&type=new_image`
        this.$navigate(url)
      },
      // 进入视频详情
      goVideo(e) {
        let id = e.currentTarget.dataset.id
        let url = `/pages/detailsVideo?id=${id}&type=new_image`
        this.$navigate(url)
      }
    }

    events = {

    }

    onLoad(options) {
      this.userInfo = this.$parent.globalData.userInfo
      this.requestImgUrl = this.$parent.globalData.requestImgUrl
      this.$apply()
      this.getData()
    }
    /**
     * 页面上拉触底事件的处理函数
     */
    onReachBottom() {
      // 翻页加载
      console.log(this.pageData[this.type])
      if (this.pageData[this.type].next_page_url != '') {
        this.getDataNextPage()
      } else {
        wx.showToast({
          title: "没有更多了",
          icon: 'none',
          duration: 2000
        });
      }
    }
    // 加载下一页数据
    getDataNextPage() {
      wx.showToast({
        title: "拼命加载中...",
        icon: 'loading',
        duration: 1000000
      });
      let type = this.type
      let nextPageUrl = this.pageData[type].next_page_url
      wx.request({
        url: nextPageUrl,
        method: 'GET',
        data: {
          type: type
        },
        success: data => {
          data = this.$parent.null2str(data)
          console.log(data)
          wx.hideToast()
          if (data.statusCode === 200) {
            let list = this.pageData[type].data
            let newList = data.data.data
            list = list.concat(newList)
            this.pageData[type].data = list
            console.log(this.pageData)
            this.$apply()
          } else {
            wx.showModal({
              title: '',
              content: data.data.errmsg
            })
          }
        }
      })
    }
    getData() {
      wx.showToast({
        title: "拼命加载中...",
        icon: 'loading',
        duration: 1000000
      });
      let type = this.type
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/weapp/users_new_images_list`,
        method: 'GET',
        header: {
          'content-type':'application/json',
          Authorization: this.$parent.globalData.token
        },
        data: {
          page: 1,
          page_size: 10,
          type: type
        },
        success: data => {
          data = this.$parent.null2str(data)
          // console.log(data)
          wx.hideToast()
          if (data.statusCode === 200) {
            this.pageData[type] = data.data.data
            // console.log(this.pageData)
            this.$apply()
          } else {
            wx.showModal({
              title: '',
              content: data.data.errmsg
            })
          }
        }
      })
    }
    // 下拉刷新
    onPullDownRefresh() {
      wx.showToast({
        title: "拼命加载中...",
        icon: 'loading',
        duration: 1000000
      });
    }
    // 点赞
    runLike(e) {
      if (e.currentTarget.dataset.str == '1') {
        wx.showToast({
          title: "不可重复点赞",
          icon: 'none'
        });
        return false
      }
      wx.showToast({
        title: "拼命加载中...",
        icon: 'loading',
        duration: 1000000
      });
      let url = `/weapp/users_like/new_image/${e.currentTarget.dataset.id}`
      wx.request({
        url: `${this.$parent.globalData.requestUrl + url}`,
        method: 'PUT',
        header: {
          'content-type':'application/json',
          Authorization: this.$parent.globalData.token
        },
        success: data => {
          data = this.$parent.null2str(data)
          // console.log(data)
          wx.hideToast()
          if (data.data.status_code === 201) {
            wx.showToast({
              title: "操作成功",
              icon: 'success',
              duration: 2000
            });
            this.pageData[this.type].data[e.currentTarget.dataset.index].is_like = '1'
          } else {
            wx.showModal({
              title: '',
              content: data.data.errmsg
            })
          }
        }
      })
    }
  }
</script>
